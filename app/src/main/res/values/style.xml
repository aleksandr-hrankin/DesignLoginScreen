<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTitleText">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/main_app_text</item>
        <item name="android:letterSpacing">0</item>
        <item name="lineHeight">40sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppPlainText">
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">@dimen/text_size_plain</item>
        <item name="android:textColor">@color/main_app_text</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.0</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="AppPlainText.Center">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppPlainText.Center.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppErrorText">
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">@dimen/text_size_plain</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">@dimen/text_size_plain</item>
        <item name="android:textColor">@color/main_app_text</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.1</item>
        <item name="lineHeight">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="AppPrimaryButton" parent="AppButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppEditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">@dimen/text_size_plain</item>
        <item name="android:textColor">@color/main_app_text</item>
        <item name="android:textColorHint">@color/main_app_text_hint</item>
    </style>
</resources>